<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/recycler_view_attendance_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manjinder Singh"
                    android:fontFamily="@font/my_font_roboto"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/roll_no_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12101012"
                    android:fontFamily="@font/my_font_roboto"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/recycler_view_attendance_button_tick"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:background="@drawable/uncheck"
                    android:elevation="10dp"
                    android:textStyle="bold"
                    />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>