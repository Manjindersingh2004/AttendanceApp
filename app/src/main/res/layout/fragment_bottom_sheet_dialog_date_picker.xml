<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomSheetDialogFragmentDatePicker">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:fontFamily="@font/my_font_roboto_light"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">
            <DatePicker
                android:id="@+id/date_pikker_fragment"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                style="@style/Date_Picker_style"
                android:headerBackground="@color/blue_"
                />
        </LinearLayout>
        <Button
            android:id="@+id/next_button_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/my_font_roboto"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/blue_"/>

    </LinearLayout>

</FrameLayout>