<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="0dp"
    tools:context=".ManageDataActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="14dp"
        android:layout_marginHorizontal="20dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_button_manage_data"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingHorizontal="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Manage Data"
            android:fontFamily="@font/my_font_roboto_light"
            android:textSize="28sp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="30dp">
            <LinearLayout
                android:id="@+id/manage_student_section_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="STUDENTS"
                        android:textSize="13sp"
                        android:fontFamily="@font/my_font_roboto"
                        android:textColor="#979797"/>
                    <LinearLayout
                        android:id="@+id/add_students_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Students"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="add new students to their respective groups"
                            android:textSize="16sp"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="#616161"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/remove_students_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Remove Students"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="remove students to their respective groups"
                            android:textSize="16sp"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="#616161"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/update_students_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Update Students"
                            android:fontFamily="@font/my_font_roboto"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="change data of students to their respective groups"
                            android:textSize="16sp"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="#616161"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/line_patation_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="#ECE8E8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GROUPS"
                        android:fontFamily="@font/my_font_roboto"
                        android:textSize="13sp"
                        android:textColor="#979797"/>
                    <LinearLayout
                        android:id="@+id/add_groups_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Group"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="add new groups"
                            android:textSize="16sp"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="#616161"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/remove_group_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Remove Group"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="remove groups will also delete students of deleted group"
                            android:textSize="16sp"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="#616161"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rename_group_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rename Group"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="change the name of groups"
                            android:textSize="16sp"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="#616161"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/line_patation_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="#ECE8E8"/>
            <LinearLayout
                android:id="@+id/delete_all_data_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">
                <LinearLayout

                    android:id="@+id/delete_all_data_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RESET"
                        android:fontFamily="@font/my_font_roboto"
                        android:textSize="13sp"
                        android:textColor="#979797"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delete All Data"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/my_font_roboto"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="all the groups and students will be deleted"
                            android:textSize="16sp"
                            android:fontFamily="@font/my_font_roboto"
                            android:textColor="#616161"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>