<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomDialogRenameGroupFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Heading_add_group_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rename Group"
            android:fontFamily="@font/my_font_roboto"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select group"
                android:fontFamily="@font/my_font_roboto"
                android:textSize="20sp"
                android:paddingHorizontal="10dp"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/rename_group_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Name"
                android:fontFamily="@font/my_font_roboto"
                android:textSize="20sp"
                android:paddingHorizontal="10dp"/>
            <EditText
                android:id="@+id/Edit_text_rename_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/my_font_roboto_thin"
                android:inputType="text"/>
        </LinearLayout>
        <Button
            android:id="@+id/rename_group_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rename group"
            android:layout_marginHorizontal="50dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:fontFamily="@font/my_font_roboto"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/blue_"/>

    </LinearLayout>

</FrameLayout>