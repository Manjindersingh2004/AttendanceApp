<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_view_attendance_layout"
    android:layout_marginHorizontal="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manjinder Singh"
                android:fontFamily="@font/my_font_roboto"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/roll_no_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12101012"
                android:textSize="25sp"
                android:fontFamily="@font/my_font_roboto_black"
                />
            <TextView
                android:id="@+id/group_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3CE12"
                android:textSize="20sp"
                android:fontFamily="@font/my_font_roboto_light"
                android:textColor="#717070"/>
            <TextView
                android:id="@+id/atend_vs_total_lec_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7/10"
                android:visibility="gone"
                android:fontFamily="@font/my_font_roboto_light"
                android:textColor="#717070"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_bar_view_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/green_"
                    app:indicatorSize="100dp"
                    app:showText="true"
                    app:trackColor="#E1F5FE"
                    app:trackThickness="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/percentage_group_progress_view_attendance"
                    android:text="100%"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/my_font_roboto_light"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>